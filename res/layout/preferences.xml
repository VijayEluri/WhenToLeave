<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView
		android:id="@+id/refreshPrefText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Refresh Interval:"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:textSize="28sp"
		android:layout_margin="2dp" />
	<Spinner
		android:id="@+id/spinnerRefreshTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:prompt="@string/refresh_time" />
	<TextView
		android:id="@+id/actionbarPrefText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Action Bar Performs:"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:textSize="28sp"
		android:layout_margin="2dp" />
	<RadioGroup
		android:id="@+id/preferencesRBGroup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<RadioButton
			android:id="@+id/rbActionButtonPrefDetails"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="Open Current Event Details" />
		<RadioButton
			android:id="@+id/rbActionButtonPrefMap"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="Map Current Event" />
		<RadioButton
			android:id="@+id/rbActionButtonPrefNav"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="Navigate to Current Event" />
	</RadioGroup>
	<TextView
		android:id="@+id/notificationPrefText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Notifications:"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:textSize="28sp"
		android:layout_margin="2dp" />
	<CheckBox
		android:id="@+id/cbEnableNotifications"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Enable Notifications" />
	<TextView
		android:id="@+id/notificationIntervalPrefText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Notify Me:"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:textSize="28sp"
		android:layout_margin="2dp" />
	<Spinner
		android:id="@+id/spinnerNotifyTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:prompt="@string/notify_time" />
</LinearLayout>