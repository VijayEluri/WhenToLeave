<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="horizontal"
android:paddingLeft="19dp"
android:paddingRight="19dp"
android:paddingTop="22dp"
android:paddingBottom="22dp"
android:background="@drawable/widget_frame"
xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton android:id="@+id/widgetNavigationButton"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/map_blue72"
        android:background="@null"/>
	<Button xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widgetEventDetailButton"
	    android:layout_width="180dp"
	    android:layout_height="fill_parent"
	    android:textColor="@color/white"
	    android:background="@drawable/custom_action_bar_green"/>
	<ImageButton android:id="@+id/widgetTransportButton"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/car72"
        android:background="@null"/>
</LinearLayout>   


