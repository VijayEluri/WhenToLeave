<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageButton
		android:id="@+id/refreshButton"
		android:layout_width="100px"
		android:layout_height="55px"
		android:layout_marginBottom="5px"
		android:text="--"
		android:textSize="32sp"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/refresh72"
        android:background="@drawable/action_bar_side_button_green"
		android:layout_x="0px"
		android:layout_y="0px">
	</ImageButton>
	<Button
		android:id="@+id/actionBar"
		android:layout_width="280px"
		android:layout_height="55px"
		android:layout_marginBottom="5px"
		android:text="Leave In 3:04h"
		android:textSize="32sp"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/custom_action_bar_green"
		android:layout_x="100px"
		android:layout_y="0px">
	</Button>
	<ImageButton
		android:id="@+id/transportModeButton"
		android:layout_width="100px"
		android:layout_height="55px"
		android:layout_marginBottom="5px"
		android:text="++"
		android:textSize="32sp"
		android:typeface="sans"
		android:textColor="@color/white"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_gravity="center_horizontal"
		android:src="@drawable/car_white55"
		android:background="@drawable/action_bar_side_button_green"
		android:layout_x="380px"
		android:layout_y="0px">
	</ImageButton>
	<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@android:id/tabhost"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="0px"
	    android:layout_marginLeft="0px"
	    android:layout_marginRight="0px"
	    android:layout_x="0px"
		android:layout_y="55px">
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:padding="5dp">
	        <TabWidget
	            android:id="@android:id/tabs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" />
	        <FrameLayout
	            android:id="@android:id/tabcontent"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="5dp" />
	    </LinearLayout>
	</TabHost>
</AbsoluteLayout>



