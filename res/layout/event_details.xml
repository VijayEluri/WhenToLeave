<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="5dp" >
	<TextView
		android:id="@+id/eventDetailsName"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:textColor="@color/white"
		android:textSize="24sp"
		android:textStyle="bold"
		android:typeface="sans" />
	<TextView
		android:id="@+id/eventDetailsLocation"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:textColor="@color/blue"
		android:textSize="17sp"
		android:textStyle="bold"
		android:typeface="sans" />
	<TextView
		android:id="@+id/eventDetailsWhen"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:textColor="@color/white"
		android:textSize="17sp"
		android:typeface="serif" />
	<TextView
		android:id="@+id/eventDetailsDescription"
		android:layout_width="fill_parent"
		android:layout_height="175dp"
		android:layout_margin="2dp"
		android:background="@drawable/gradient_box_grey"
		android:textColor="@color/grey3"
		android:textSize="12sp"
		android:typeface="serif" />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:padding="5dp" >
		<Button
			android:id="@+id/eventDetailsMapButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_weight="1"
			android:background="@drawable/custom_launcher_button"
			android:text="Map"
			android:textColor="@color/white"
			android:textSize="21sp"
			android:textStyle="bold"
			android:typeface="sans" />
		<Button
			android:id="@+id/eventDetailsNavButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_weight="1"
			android:background="@drawable/custom_launcher_button"
			android:text="Navigate"
			android:textColor="@color/white"
			android:textSize="21sp"
			android:textStyle="bold"
			android:typeface="sans" />
	</LinearLayout>
</LinearLayout>